{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "typeRoots" : [
      "./typings",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}