{
  "extends": "tslint:recommended",
  "rules": {
    "arrow-parens": false,
    "class-name": true,
    "comment-format": false,
    "indent": [
      true,
      "spaces"
    ],
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-var-keyword": true,
    "no-var-requires": false,
    "no-any": false,
    "no-reference": false,
    "no-unused-expression": false,
    "no-console": false,
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "interface-name": false,
    "trailing-comma": false,
    "ordered-imports": false,
    "member-access": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": false,
    "semicolon": false,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "max-line-length": [ false ]
  }
}